[32m+[m[32m// ======================= SIMPLE IN-MEMORY STREAK TRACKER =======================[m
[32m+[m[32mclass SimpleStreakTracker {[m
[32m+[m[32m    // List of dates (yyyy-MM-dd) when user worked out >=15 min[m
[32m+[m[32m    private val workoutDates = mutableListOf<String>()[m
[32m+[m
[32m+[m[32m    private fun today() = LocalDate.now().toString()[m
[32m+[m
[32m+[m[32m    // Call this when user finishes a workout session lasting >=15 minutes[m
[32m+[m[32m    fun markWorkoutCompleted(minutes: Int = 15) {[m
[32m+[m[32m        if (minutes < 15) return[m
[32m+[m[32m        val todayStr = today()[m
[32m+[m[32m        if (!workoutDates.contains(todayStr)) {[m
[32m+[m[32m            workoutDates.add(todayStr)[m
[32m+[m[32m        }[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    fun getCurrentStreak(): Int {[m
[32m+[m[32m        val today = LocalDate.now()[m
[32m+[m[32m        var streak = 0[m
[32m+[m[32m        var checkDate = today[m
[32m+[m[32m        while (true) {[m
[32m+[m[32m            if (workoutDates.contains(checkDate.toString())) {[m
[32m+[m[32m                streak++[m
[32m+[m[32m                checkDate = checkDate.minusDays(1)[m
[32m+[m[32m            } else {[m
[32m+[m[32m                break[m
[32m+[m[32m            }[m
[32m+[m[32m        }[m
[32m+[m[32m        return streak[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    fun getBestStreak(): Int {[m
[32m+[m[32m        if (workoutDates.isEmpty()) return 0[m
[32m+[m
[32m+[m[32m        val sorted = workoutDates[m
[32m+[m[32m            .map { LocalDate.parse(it) }[m
[32m+[m[32m            .sorted()[m
[32m+[m
[32m+[m[32m        var current = 1[m
[32m+[m[32m        var best = 1[m
[32m+[m[32m        for (i in 1 until sorted.size) {[m
[32m+[m[32m            if (sorted[i] == sorted[i - 1].plusDays(1)) {[m
[32m+[m[32m                current++[m
[32m+[m[32m                best = maxOf(best, current)[m
[32m+[m[32m            } else {[m
[32m+[m[32m                current = 1[m
[32m+[m[32m            }[m
[32m+[m[32m        }[m
[32m+[m[32m        return best[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    // Returns list of 7 booleans: Mon (6 days ago) â†’ Sun (today)[m
[32m+[m[32m    fun getWeekCheckmarks(): List<Boolean> {[m
[32m+[m[32m        val today = LocalDate.now()[m
[32m+[m[32m        return (6 downTo 0).map { offset ->[m
[32m+[m[32m            val day = today.minusDays(offset.toLong())[m
[32m+[m[32m            workoutDates.contains(day.toString())[m
[32m+[m[32m        }[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    // For testing / reset[m
[32m+[m[32m    fun reset() = workoutDates.clear()[m
[32m+[m[32m}[m
[32m+[m
